<div>
    <h1>What's New?</h1>
    Your Opinion Matters. Check the
    <a href="https://github.com/users/valasek/projects/2/views/1?layout=board" class="link">Roadmap</a>
    or <%= link_to "Leave a Feedback", "https://forms.gle/rMP5FwtpPDMgSn337", class: "link" %>.
    <% @changelog_entries.each_with_index do |entry, index| %>
        <details class="bg-white shadow-md rounded-lg mb-6" <%= 'open' if index.zero? %>>
            <summary class="p-4 border-b border-gray-200 cursor-pointer">
            <span class="text-xl font-semibold">Version <%= entry[:version] %><br/></span>
            <span class="text-sm text-gray-500"><%= entry[:date] %></span>
            </summary>
            <div class="p-4">
                <% entry[:changes].each do |category, items| %>
                    <div class="mb-4">
                        <h4 class="font-medium text-gray-700 mb-2"><%= category %></h4>
                        <ul class="list-disc list-inside space-y-1">
                            <% items.each do |item| %>
                                <li class="text-sm text-gray-600"><%= item %></li>
                            <% end %>
                        </ul>
                    </div>
                <% end %>
            </div>
        </details>
    <% end %>
</div>
