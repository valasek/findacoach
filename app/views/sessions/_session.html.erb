
<div id="<%= dom_id session %>" class="flex flex-row gap-4">
    <fieldset class="fieldset basis-1/3">
        <legend class="fieldset-legend">Duration</legend><%= session.duration %>
    </fieldset>
    <fieldset class="fieldset basis-1/3">
        <legend class="fieldset-legend">Type</legend>
        <% if session.group? %>
            Group, <%= session.group_size %> members
        <% else %>
          <div class="stat-desc">Individual</div>
        <% end %>
    </fieldset>
</div>

<div class="flex flex-row gap-4 mb-8">
    <fieldset class="fieldset basis-full">
        <legend class="fieldset-legend">Notes</legend><%= session.notes %>
  </fieldset>
</div>
