<%= form_with(model: [@client, @session], id: "new_session", class: "contents") do |form| %>
  <%= hidden_field_tag :source, params[:source] %>
  <%= render "partials/show_form_errors", object: @session %>
  <div class="md:flex md:space-x-4">
    <div class="my-5 md:w-1/4">
      <%= form.label :date, "Date", class: "block text-sm font-medium leading-6 text-gray-900" %>
      <%= form.date_field :date, autofocus: true, placeholder: "", class: "mt-2 block shadow w-full rounded-md border border-gray-400 py-1.5 text-gray-900 placeholder:text-gray-400 sm:text-sm sm:leading-6" %>
    </div>
    <div class="my-5 md:w-1/4">
      <%= form.label :duration , "Duration", class: "block text-sm font-medium leading-6 text-gray-900" %>
      <%= form.number_field :duration, min: 0, value: 1, step: 0.5, placeholder: "Duration", class: "mt-2 block shadow w-full rounded-md border border-gray-400 py-1.5 text-gray-900 placeholder:text-gray-400 sm:text-sm sm:leading-6" %>
    </div>
    <div class="my-5">
      <%= form.label :paid, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <%= form.check_box :paid, class: "mt-4 ml-2 h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
    </div>
  </div>
  <div class="md:flex md:space-x-4">
    <div class="my-5">
      <%= form.label :notes, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <%= form.text_area :notes, rows: 8, cols: 80, placeholder: "Add all relevant notes and your comments", class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
  </div>
  <%= button_tag type:'submit', class: "inline-block rounded-md bg-green-500 px-3 py-2 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-green-400" do %>
  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="h-5 w-5 inline">
    <path stroke-linecap="round" stroke-linejoin="round" d="m20.25 7.5-.625 10.632a2.25 2.25 0 0 1-2.247 2.118H6.622a2.25 2.25 0 0 1-2.247-2.118L3.75 7.5m8.25 3v6.75m0 0-3-3m3 3 3-3M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125Z" />
  </svg>
  Save
  <% end %>
<% end %>
