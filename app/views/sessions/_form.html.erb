<%= form_with(model: session, local: true, class: "inline") do |form| %>
  <%= render "partials/show_form_errors", object: session %>

  <div class="my-5">
    <%= form.label :date %>
    <%= form.date_field :date, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": session.errors[:date].none?, "border-red-400 focus:outline-red-600": session.errors[:date].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :duration %>
    <%= form.text_field :duration, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": session.errors[:duration].none?, "border-red-400 focus:outline-red-600": session.errors[:duration].any?}] %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :paid %>
    <%= form.checkbox :paid, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": session.errors[:paid].none?, "border-red-400 focus:outline-red-600": session.errors[:paid].any?}] %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :group %>
    <%= form.checkbox :group, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": session.errors[:group].none?, "border-red-400 focus:outline-red-600": session.errors[:group].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :group_size %>
    <%= form.number_field :group_size, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": session.errors[:group_size].none?, "border-red-400 focus:outline-red-600": session.errors[:group_size].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :notes %>
    <%= form.textarea :notes, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": session.errors[:notes].none?, "border-red-400 focus:outline-red-600": session.errors[:notes].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
