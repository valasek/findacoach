<!-- Client Card -->
<div class="bg-white shadow-md rounded-lg overflow-hidden" data-controller="toggle-notes">
    <div class="p-4">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4 items-center">
            <div class="font-semibold"><%= client.name %></div>
            <div class="inline-flex items-center">
                <span class="badge badge-outline badge-neutral badge-sm">
                    <%= sessions.count %> sessions | <%= sessions.sum(&:duration) %> hours
                </span>
            </div>
            <div class="text-gray-600 truncate text-xs"><%= client.email %></div>
            <div class="text-gray-600 justify-self-start sm:justify-self-left md:justify-self-center text-xs"><%= client.phone %></div>
            <div class="flex justify-end space-x-2">
                <button title="Show my notes" class="rounded-md mr-1 px-2 py-1 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-100" data-action="click->toggle-notes#toggle">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="stroke-indigo-500 h-5 w-5 inline">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
                    </svg>
                    Notes
                </button>
                <%= link_to new_client_session_path(client, source: 'index'), title: "Add coaching session", class: "rounded-md border-solid border-2 border-indigo-600 mr-1 px-2 py-1 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-100", data: { turbo_frame: "_top" } do %>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="stroke-indigo-500 h-5 w-5 inline">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m3.75 9v6m3-3H9m1.5-12H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
                    </svg>
                <% end %>
                <%= link_to edit_client_path(client), title: "Edit client", class: "rounded-md border-solid border-2 border-indigo-600 mr-1 px-2 py-1 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-100", data: { turbo_frame: "_top" } do %>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" class="stroke-indigo-500 h-5 w-5 inline" viewBox="0 0 25 25" stroke="" >
                        <path d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                    </svg>
                <% end %>
            </div>
        </div>
        <div class="mt-2 mb-0 p-0 text-sm text-gray-500 border-t hidden whitespace-pre-wrap" data-toggle-notes-target="notes">
            <%= simple_format(client.notes, { class: 'm-0 p-0' }, wrapper_tag: "div") %>
        </div>
    </div>
</div>
<!-- End of client card -->
