<div class="w-full">

  <% content_for :title, "Clients" %>

  <div class="container mx-auto px-4 py-8">
        <!-- Header -->
        <header class="mb-6 flex flex-col sm:flex-row justify-between items-start sm:items-center">
            <div class="flex items-center">
              <h1 class="text-2xl font-bold mb-4 sm:mb-0">
                Your Clients
              </h1>
              <span
                class="ml-2 inline-flex items-center rounded-md bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600 ring-1 ring-inset ring-gray-500/10">
                <%= @active_clients %> active / <%= @archived_clients %> archived
            </span>
            </div>

            <div class="flex items-center">
                <label class="flex items-center mr-4 cursor-pointer">
                    <input type="checkbox", class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600">
                    <span class="ml-2 text-sm text-gray-500">Show archived clients</span>
                </label>
                <%= link_to "New client", new_client_path, class: "flex  justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
            </div>
        </header>

        <!-- Client Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% @clients.each do |client| %>
                <%= render "client_card", client: client %>
            <% end %>
        </div>
        <!-- End of Client Cards -->
        <br/><hr/>
        <%= paginate @clients %>

    </div>
</div>
