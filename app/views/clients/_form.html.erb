<%= form_with(model: client, class: "inline", local: false) do |form| %>
  <%= render "partials/show_form_errors", object: client %>

  <div class="flex flex-row gap-4">
    <fieldset class="fieldset basis-1/3">
      <legend class="fieldset-legend"><%= form.label :name %></legend>
      <%= form.text_field :name, autofocus: true, placeholder: "Name", class: ["input", {"input-error": client.errors[:name].any?}] %>
    </fieldset>
    <fieldset class="fieldset basis-1/3">
      <legend class="fieldset-legend"><%= form.label :email %></legend>
      <%= form.text_field :email, placeholder: "Email", class: ["input", {"input-error": client.errors[:email].any?}] %>
    </fieldset>
    <fieldset class="fieldset basis-1/3">
      <legend class="fieldset-legend"><%= form.label :phone %></legend>
      <%= form.text_field :phone, placeholder: "Phone", class: ["input", {"input-error": client.errors[:phone].any?}] %>
    </fieldset>
  </div>

  <div class="flex flex-row gap-4 mb-8">
    <fieldset class="fieldset basis-full">
      <legend class="fieldset-legend"><%= form.label :notes %></legend>
      <%= form.text_area :notes, rows: 8, cols: 80, placeholder: "Notes", class: "textarea w-full" %>
    </fieldset>
  </div>

  <%= form.submit "Save", class: "btn btn-primary" %>
<% end %>