<%= form_with(model: client, class: "contents") do |form| %>
  <%= render "partials/show_form_errors", object: client %>
  <div class="md:flex md:space-x-4">
    <div class="my-5 md:w-1/3">
      <%= form.label :name, "Name", class: "block text-sm font-medium leading-6 text-gray-900" %>
      <%= form.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name", class: "mt-2 block shadow w-full rounded-md border border-gray-400 py-1.5 text-gray-900 placeholder:text-gray-400 sm:text-sm sm:leading-6" %>
    </div>
    <div class="my-5 md:w-1/3">
      <%= form.label :email , "Email Address", class: "block text-sm font-medium leading-6 text-gray-900" %>
      <%= form.text_field :email, placeholder: "Email address", class: "mt-2 block shadow w-full rounded-md border border-gray-400 py-1.5 text-gray-900 placeholder:text-gray-400 sm:text-sm sm:leading-6" %>
    </div>
    <div class="my-5 md:w-1/3">
      <%= form.label :phone, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <%= form.text_field :phone, placeholder: "Phone", class: "mt-2 block shadow w-full rounded-md border border-gray-400 py-1.5 text-gray-900 placeholder:text-gray-400 sm:text-sm sm:leading-6" %>
    </div>
  </div>
  <div class="md:flex md:space-x-4">
    <div class="my-5">
      <%= form.label :notes, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <%= form.text_area :notes, rows: 8, cols: 80, placeholder: "Add all relevant notes and your comments", class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-2 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
